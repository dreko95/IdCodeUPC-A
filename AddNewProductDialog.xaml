<Window x:Class="IdCode.AddNewProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IdCode"
        mc:Ignorable="d"
        Title="AddNewProductDialog" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Manufacturer ID:" />
            <TextBox x:Name="ManufacturerIdTextBox" IsReadOnly="True" />

            <TextBlock Text="Manufacturer Name:" />
            <TextBox x:Name="ManufacturerNameTextBox" />

            <TextBlock Text="Product ID:" />
            <TextBox x:Name="ProductIdTextBox" IsReadOnly="True" />

            <TextBlock Text="Product Name:" />
            <TextBox x:Name="ProductNameTextBox" />

            <TextBlock Text="Product Price:" />
            <TextBox x:Name="ProductPriceTextBox" />

            <Button Content="Save" Click="SaveButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
